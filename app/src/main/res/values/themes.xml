<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MyTaxi" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>

        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="bottomSheetDialogTheme">@style/AppModalBottomSheet</item>

        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <item name="dividerColor">@color/divider_color</item>
        <item name="divider_color">@color/divider_color</item>
        <item name="text_secondary_color">@color/text_secondary_color</item>

        <item name="default_corner">@dimen/theme_corner_radius</item>

        <item name="textAppearanceDisplaySmall">@style/TextAppearance.MyTaxi.DisplaySmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.MyTaxi.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.MyTaxi.BodyMedium</item>
    </style>

</resources>